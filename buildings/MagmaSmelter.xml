<?xml version="1.0" ?>



<building name="Magma Smelter" gameID="magma_smelter"> 

	<!-- benches block -->
	<if> 
		<!-- replace this with position index if required -->
		<BuildingOccupancy value="3" />	
		<!-- stoves -->
		<if>
			<MaterialType value="Metal"/>
			<sprite index = 257 />
		</if>
		<else>
			<sprite index = 272 />
		</else>
	</if>
	<else>
		<not><or>
			<NeighbourSameBuilding dir="TopRight"/>
			<NeighbourSameBuilding dir="TopLeft"/>
		</or></not>
		<sprite index = 244 />
	</else>
	<else>
		<not>
			<NeighbourSameBuilding dir="TopRight"/>
		</not>
		<sprite index = 240 />
	</else>
	<else>
		<not>
			<NeighbourSameBuilding dir="TopLeft"/>
		</not>
		<sprite index = 241 />
	</else>
	<!-- end benches block -->
 
	<!-- contents -->
	
	<if>
		<BuildingOccupancy value="3" />
	</if>	
		
	<else>
		<not><HaveFloor/></not>
		<empty/>
	</else>
	
	<else>
		<PositionIndex value=2 />
		<sprite index = 240 />
		<sprite index = 258 />
		<sprite index = 247 />
	</else>	
	
	<else>
		<PositionIndex value=6 />
		<sprite index = 241 />
		<sprite index = 259 offsetx=5/>
		<sprite index = 245 />	
	</else>
	
	<else>
		<PositionIndex value=8 />
		<sprite index = 263 offsetx=1 offsety=-3/>
		<sprite index = 246 />
	</else>	
	
	<!-- generic border -->

	<else>
		<and>
			<BuildingOccupancy value="1" />
			<PositionIndex value=4 />
		</and>
		<sprite index = 321 />
	</else>	
	
	<else>
		<not><or>
			<NeighbourSameBuilding dir="BottomRight"/>
			<NeighbourSameBuilding dir="BottomLeft"/>
		</or></not>
		<sprite index = 246 />
	</else>
	<else>
		<not><or>
			<NeighbourSameBuilding dir="BottomLeft"/>
		</or></not>
		<sprite index = 242 />
	</else>
	<else>
		<not><or>
			<NeighbourSameBuilding dir="BottomRight"/>
		</or></not>
		<sprite index = 243 />
	</else>	
	
	<else>
		<empty/>
	</else>	
	<!-- end generic block -->
	
</building> 
