<?xml version="1.0" ?>



<building name="Glass Window" gameID="glass_window">

	<if>
		<or>
			<NeighbourSameType dir="North" />
			<NeighbourSameType dir="South" />
			<NeighbourWall dir="North" />
			<NeighbourWall dir="South" />
		</or>
		<if>
			<MaterialType value="GreenGlass"/>
			<sprite index=63/>
		</if>
		<else>
			<MaterialType value="CrystalGlass"/>
			<sprite index=65/>
		</else>
		<else>
			<sprite index=61/>
		</else>
	</if>
	<else>
		<MaterialType value="GreenGlass"/>
		<sprite index=62/>
	</else>
	<else>
		<MaterialType value="CrystalGlass"/>
		<sprite index=64/>
	</else>
	<else>
		<sprite index=60/>
	</else>

</building> 
