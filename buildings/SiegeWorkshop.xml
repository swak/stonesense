<?xml version="1.0" ?>



<building name="Siege Workshop" gameID="siege_workshop"> 

	<!-- benches block -->
	<if> 
		<!-- replace this with position index if required -->
		<BuildingOccupancy value="3" />	
		<!-- benches -->
		<if>
			<MaterialType value="Wood" />
			<sprite index = 274 />
		</if>
		<else>
			<MaterialType value="Metal"/>
			<sprite index = 254 />
		</else>
		<else>
			<MaterialType value="GreenGlass"/>
			<sprite index = 285 />
		</else>
		<else>
			<or>
				<MaterialType value="ClearGlass"/>
				<MaterialType value="CrystalGlass"/>
			</or>
			<sprite index = 283 />
		</else>
		<else>
			<sprite index = 273 />
		</else>
		<!-- borders -->
		<if>
			<not>
				<or>
					<NeighbourIdentical dir="TopRight"/>
					<NeighbourWall dir="TopRight"/>
				</or>
			</not>
			<sprite index = 282 />
		</if>
		<if>
			<not>
				<or>
					<NeighbourIdentical dir="TopLeft"/>
					<NeighbourWall dir="TopLeft"/>
				</or>
			</not>
			<sprite index = 280 />
		</if>	
	</if>
	<!-- end benches block -->
 
	<!-- contents -->
	
	<if>
		<BuildingOccupancy value="3" />
		<if>
			<PositionIndex value=7 />
			<sprite index = 287 offsetx=-11 offsety=-4/>
		</if>	
		<if>
			<PositionIndex value=8 />
			<sprite index = 287 offsetx=-5 offsety=-5/>
		</if>
		<if>
			<PositionIndex value=16 />
			<sprite index = 279 offsetx=2 offsety=-2 />
			<sprite index = 291 offsetx=-3 offsety=-2 />
		</if>
		<if>
			<PositionIndex value=17 />
			<sprite index = 319 offsetx=2 offsety=-8/>
		</if>
		<if>
			<PositionIndex value=18 />
			<sprite index = 250 offsety=-1/>
		</if>
	</if>	
	<else>
		<PositionIndex value=24 />
		<sprite index = 252 offsety=-2/>
		<sprite index = 246 />
	</else>
	<else>
		<PositionIndex value=21 />
		<sprite index = 305 offsetx=2 offsety=-1/>
		<sprite index = 242 />
	</else>
	<else>
		<PositionIndex value=4 />
		<sprite index = 240 />
		<sprite index = 319 offsetx=-4 offsety=1/>
		<sprite index = 247 />
	</else>	
	
		
	<!-- generic large border -->
	<else>
		<and>
			<BuildingOccupancy value="1" />
			<PositionIndex value=12 />
		</and>
		<sprite index = 321 />
	</else>	
	<else>
		<PositionIndex value=0 />
		<sprite index = 244 />
	</else>
	<else>
		<or>
			<PositionIndex value=1 />
			<PositionIndex value=2 />
			<PositionIndex value=3 />
		</or>
		<sprite index = 240 />
	</else>
	<else>
		<PositionIndex value=4 />
		<sprite index = 240 />
		<sprite index = 247 />
	</else>

	<else>
		<or>
			<PositionIndex value=5 />
			<PositionIndex value=10 />
			<PositionIndex value=15 />
		</or>
		<sprite index = 241 />
	</else>
	<else>
		<or>
			<PositionIndex value=9 />
			<PositionIndex value=14 />
			<PositionIndex value=19 />
		</or>
		<sprite index = 243 />
	</else>
	
	<else>
		<PositionIndex value=20 />
		<sprite index = 241 />
		<sprite index = 245 />
	</else>
	<else>
		<or>
			<PositionIndex value=21 />
			<PositionIndex value=22 />
			<PositionIndex value=23 />
		</or>
		<sprite index = 242 />
	</else>
	<else>
		<PositionIndex value=24 />
		<sprite index = 246 />
	</else>	
	
	<else>
		<empty/>
	</else>	
	<!-- end generic block -->

</building> 
