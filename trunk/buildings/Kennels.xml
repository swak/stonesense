<?xml version="1.0" ?>



<building name="Kennels" gameID="kennels"> 

	<!-- generic top border -->
	<if>
		<not><or>
			<NeighbourSameBuilding dir="TopRight"/>
			<NeighbourSameBuilding dir="TopLeft"/>
		</or></not>
		<sprite index = 244 />
	</if>
	<else>
		<not>
			<NeighbourSameBuilding dir="TopRight"/>
		</not>
		<sprite index = 240 />
	</else>
	<else>
		<not>
			<NeighbourSameBuilding dir="TopLeft"/>
		</not>
		<sprite index = 241 />
	</else>
	<!-- end generic border -->

	<if>
		<PositionIndex value=6 />
		<sprite index = 107 />
	</if>
	
	<else>
		<and>
			<PositionIndex value=8 />
			<BuildingOccupancy value="2" />
		</and>
		<sprite index = 107 />
	</else>
	
	<else>
		<and>
			<PositionIndex value=16 />
			<BuildingOccupancy value="2" />
		</and>
		<sprite index = 312 />
	</else>
	
	<else>
		<PositionIndex value=18 />
		<sprite index = 107 />
	</else>


	<!-- generic large border -->
	<else>
		<and>
			<BuildingOccupancy value="1" />
			<PositionIndex value=12 />
		</and>
		<sprite index = 321 />
	</else>	
	
	<else>
		<not><or>
			<NeighbourSameBuilding dir="BottomRight"/>
			<NeighbourSameBuilding dir="BottomLeft"/>
		</or></not>
		<sprite index = 246 />
	</else>
	<else>
		<not><or>
			<NeighbourSameBuilding dir="BottomLeft"/>
		</or></not>
		<sprite index = 242 />
	</else>
	<else>
		<not><or>
			<NeighbourSameBuilding dir="BottomRight"/>
		</or></not>
		<sprite index = 243 />
	</else>	
	
	<else>
		<empty/>
	</else>	
	<!-- end generic block -->
	
</building> 
