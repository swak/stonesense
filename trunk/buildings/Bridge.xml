<?xml version="1.0" ?>



<building name="Bridge" gameID="bridge" > 

	<if>
		<BuildingOccupancy value="2" />
		<empty/>
	</if>	
	
	<!-- wood -->
	<else>
		<MaterialType value="Wood" />
		<if>
			<!-- raised -->
			<BuildingOccupancy value="6" />
			<if>
				<or>
					<NeighbourIdentical dir="West" />
					<NeighbourIdentical dir="East" />		
				</or>
				<sprite index=366 />
				<if>
					<not><NeighbourIdentical dir="West" /></not>
					<sprite index=367 />
				</if>
				<if>
					<not><NeighbourIdentical dir="East" /></not>
					<sprite index=368 />
				</if>
			</if>
			<else>
				<sprite index=369 />
				<if>
					<not><NeighbourIdentical dir="North" /></not>
					<sprite index=371 />
				</if>
				<if>
					<not><NeighbourIdentical dir="South" /></not>
					<sprite index=370 />
				</if>				
			</else>
		</if>
		<else>
			<!-- flat -->
			<sprite index=360 />
			<if>
				<not><or>
					<NeighbourSameBuilding dir="North" />
					<NeighbourSameBuilding dir="West" />
				</or></not>
				<sprite index = 365 />
			</if>
			<else>
				<not><NeighbourSameBuilding dir="North" /></not>
				<sprite index = 362 />
			</else>
			<else>
				<not><NeighbourSameBuilding dir="West" /></not>
				<sprite index = 361 />
			</else>
			<if>
				<not><NeighbourSameBuilding dir="South" /></not>
				<sprite index = 363 />
			</if>
			<if>
				<not><NeighbourSameBuilding dir="East" /></not>
				<sprite index = 364 />
			</if>	
		</else>	
	</else>
	
	
	
	<!-- default (stone) -->
	<else>
		<!-- raised -->
		<BuildingOccupancy value="6" />
		<if>
			<or>
				<NeighbourIdentical dir="West" />
				<NeighbourIdentical dir="East" />		
			</or>
			<sprite index=330 />
			<if>
				<not><NeighbourIdentical dir="West" /></not>
				<sprite index=331 />
			</if>
			<if>
				<not><NeighbourIdentical dir="East" /></not>
				<sprite index=332 />
			</if>
		</if>
		<else>
			<sprite index=333 />
			<if>
				<not><NeighbourIdentical dir="North" /></not>
				<sprite index=335 />
			</if>
			<if>
				<not><NeighbourIdentical dir="South" /></not>
				<sprite index=334 />
			</if>				
		</else>
	</else>
	<else>
		<!-- flat -->
		<sprite index=324 />
		<if>
			<not><or>
				<NeighbourSameBuilding dir="North" />
				<NeighbourSameBuilding dir="West" />
			</or></not>
			<sprite index = 329 />
		</if>
		<else>
			<not><NeighbourSameBuilding dir="North" /></not>
			<sprite index = 326 />
		</else>
		<else>
			<not><NeighbourSameBuilding dir="West" /></not>
			<sprite index = 325 />
		</else>
		<if>
			<not><NeighbourSameBuilding dir="South" /></not>
			<sprite index = 327 />
		</if>
		<if>
			<not><NeighbourSameBuilding dir="East" /></not>
			<sprite index = 328 />
		</if>		
	</else>	

	<!-- edging on flat bridges -->
	<if>
		<not><or>
			<BuildingOccupancy value="6" />
			<BuildingOccupancy value="2" />
		</or></not>
		<if>
			<not><NeighbourSameBuilding dir="North" /></not>
			<sprite index = 282 offsety=8/>
		</if>
		<if>
			<not><NeighbourSameBuilding dir="West" /></not>
			<sprite index = 280 offsety=8/>
		</if>		
	</if>

</building> 
